{
  "name": "aidoccli",
  "version": "1.0.0",
  "description": "AI-powered Documentation CLI for JavaScript and TypeScript Projects",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "format:md": "prettier --check **/*.md",
    "format:md:fix": "prettier --write **/*.md",
    "lint:md": "markdownlint --ignore-path .gitignore .",
    "lint:md:fix": "markdownlint --ignore-path .gitignore --fix .",
    "audit:ci": "npm audit --production",
    "prepare": "husky install",
    "release": "npx semantic-release"
  },
  "keywords": [
    "ai",
    "documentation",
    "cli",
    "javascript",
    "typescript",
    "jsdoc",
    "tsdoc",
    "docs-generator",
    "automation"
  ],
  "author": "ioncakephper",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.2.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.2.5",
    "semantic-release": "^23.0.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^13.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix",
      "prettier --write"
    ]
  }
}
